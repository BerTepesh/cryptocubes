{% from '../macros/icon.twig' import icon %}
<div class="ham-panel {% if curPageId == 'home' %} ham-panel_landing {% endif %}">
	<div class="ham-panel__holder">
		<nav class="ham-panel-nav" data-plugin="dropdown"> 
			<ul>
				{% for item in navigation %}
					{% if item.children|default(false) and item.children|length %}
						<li class="has-children">
							<span>
								<a href="#">{{ item.title }}</a>
								<a href="#sub-nav" class="sub-trigger" data-dropdown-btn>&nbsp;</a>
							</span>
							<div class="sub-nav" data-dropdown-content="sub-nav">
								<ul>
									{% for item in item.children %}
										<li><a href="{{ item.url }}">{{ item.title }}</a></li>
									{% endfor %}
								</ul>
							</div>
						</li>
					{% else %}
						<li {% if curPageId == item.pageId %} class="active"{% endif %}><a href="{{ item.url }}">{{ item.title }}</a></li>
					{% endif %}
				{% endfor %}
			</ul>
		</nav>
		<div class="ham-panel__info">			
			<ul class="social social--ham">
				<li>
					<a href="#">
						{{ icon('discord' , {'width': 32, 'height': 24}) }}
					</a>
				</li>
				<li>
					<a href="#">
						{{ icon('youtube' , {'width': 34, 'height': 25}) }}
					</a>
				</li>
				<li>
					<a href="#">
						{{ icon('fb' , {'width': 25, 'height': 25}) }}
					</a>
				</li>
				<li>
					<a href="#">
						{{ icon('main' , {'width': 25, 'height': 25}) }}
					</a>
				</li>
				<li>
					<a href="#">
						{{ icon('rd' , {'width': 25, 'height': 25}) }}
					</a>
				</li>
				<li>
					<a href="#">
						{{ icon('tw' , {'width': 25, 'height': 25}) }}
					</a>
				</li>
			</ul>
		</div>
	</div>

</div>